<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          hgap="10" vgap="10"
          style="-fx-padding: 20; -fx-background-color: white; -fx-border-color: #dcdcdc; -fx-border-width: 1;"
          xmlns="http://javafx.com/javafx/8.0.111">
    
    <!-- Title -->
    <Label text="PLEASE FILL REGISTER FORM" GridPane.columnSpan="2" GridPane.halignment="CENTER"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #007bff;"/>

    <!-- Full Name -->
    <Label text="Enter Full Name*" />
    <TextField fx:id="nameField" promptText="Enter Full Name"/>

    <!-- Email -->
    <Label text="Email@gmail.com" GridPane.rowIndex="1" />
    <TextField fx:id="emailField" promptText="Email@gmail.com" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Phone Number -->
    <Label text="Phone Number.." GridPane.rowIndex="2" />
    <TextField fx:id="phoneNumberField" promptText="Phone Number.." GridPane.rowIndex="2"/>

    <!-- Mobile Number -->
    <Label text="Mobile Number.." GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <TextField fx:id="mobileNumberField" promptText="Mobile Number.." GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- Password -->
    <Label text="Password" GridPane.rowIndex="3" />
    <PasswordField fx:id="passwordField" promptText="Password" GridPane.rowIndex="3"/>

    <!-- Confirm Password -->
    <Label text="Confirm Password" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- District -->
    <Label text="District" GridPane.rowIndex="4" />
    <TextField fx:id="districtField" promptText="District" GridPane.rowIndex="4"/>

    <!-- Tal -->
    <Label text="Tal" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <TextField fx:id="talField" promptText="Tal" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <!-- File Chooser -->
    <Label text="Upload File" GridPane.rowIndex="5" />
    <HBox GridPane.rowIndex="5" GridPane.columnIndex="1">
        <Button text="Choose File"/>
        <Label text="No file chosen"/>
    </HBox>

    <!-- Address -->
    <Label text="Enter The Detailed Address" GridPane.rowIndex="6" />
    <TextArea fx:id="addressField" promptText="Enter The Detailed Address" GridPane.rowIndex="6" GridPane.columnSpan="2"/>

    <!-- Accept Terms -->
    <CheckBox text="Accept terms and conditions" GridPane.rowIndex="7" GridPane.columnSpan="2"/>

    <!-- Buttons -->
    <HBox GridPane.rowIndex="8" GridPane.columnSpan="2" GridPane.halignment="RIGHT">
        <Button text="Reset" style="-fx-background-color: #ffc107; -fx-text-fill: white;"/>
        <Button text="Submit" style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
    </HBox>

</GridPane>
