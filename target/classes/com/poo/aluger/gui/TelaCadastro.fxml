        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <VBox prefHeight="422.0" prefWidth="356.0" style="-fx-background-color: #FFFFFF;">
        <children>
            <StackPane>
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
                <children>
                    <Label text="Crie sua contra" textFill="#272ac5">
                        <font>
                            <Font size="22.0" />
                        </font>
                    </Label>
                </children>
            </StackPane>
            <StackPane>
                <children>
                    <Label alignment="CENTER" style="-fx-alignment: center;" text="Cadastre seus dados" textFill="#828282">
                        <StackPane.margin>
                            <Insets top="17.0" />
                        </StackPane.margin>
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </children>
            </StackPane>
            <Label text="Nome">
                <VBox.margin>
                    <Insets left="40.0" top="20.0" />
                </VBox.margin>
            </Label>
            <TextField id="nome" prefHeight="40.0" prefWidth="364.0" promptText="Nome">
                <VBox.margin>
                    <Insets left="40.0" right="40.0" top="10.0" />
                </VBox.margin>
            </TextField>
            <Label text="Email">
                <VBox.margin>
                    <Insets left="40.0" top="10.0" />
                </VBox.margin>
            </Label>
