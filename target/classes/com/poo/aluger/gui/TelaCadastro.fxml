            </TextField>
            <Label text="Senha">
                <VBox.margin>
                    <Insets left="40.0" top="10.0" />
                </VBox.margin>
            </Label>
            <PasswordField id="senha" prefHeight="40.0" promptText="Senha">
                <VBox.margin>
                    <Insets left="40.0" right="40.0" top="10.0" />
                </VBox.margin>
            </PasswordField>
            <StackPane>
